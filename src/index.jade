                             li
                                 a(href="#type3").waves-effect.waves-button 功能组件
                             li
                                 a(href="#type4").waves-effect.waves-button 工具组件
        a.github-ribbon(href="https://github.com/devWayne/ActiLib",target="_blank")
            img(style="position: fixed; top: 0; right: 0; border: 0;z-index:9999",src="img/github-icon.png",alt="Fork me on GitHub")
        div.main
            ul
                li  
                    div.unit-headtype1.scrollto#type1 核心组件
                li
                    div.waves-effect.waves-light.waves-block.unit-blocktype1
                            p.head
                                 a(href="https://github.com/devWayne/core.js") Core.js
                            p.body 轻量级DOM操作，兼容jQuery API
                    div.waves-effect.waves-light.waves-block.unit-blocktype1
                            p.head Base.js
                                 a(href="https://github.com/devWayne/base.js")
                            p.body 封装常用数据操作
                    div.waves-effect.waves-light.waves-block.unit-blocktype1
                            p.head Tmpl.js
                                 a(href="https://github.com/devWayne/tmpl.js")
                            p.body 轻量级模板渲染
                    div.clear
                li  
                    div.unit-headtype2.scrollto#type2 效果组件
                li
                    div.waves-effect.waves-light.waves-block.unit-blocktype2
                            p.head Wheel.js
                                 a(href="https://github.com/devWayne/wheel.js")
                            p.body 转盘抽奖
                    div.waves-effect.waves-light.waves-block.unit-blocktype2
                            p.head Slider.js
                                 a(href="https://github.com/devWayne/slider.js")
